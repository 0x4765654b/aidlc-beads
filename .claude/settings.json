{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "permissions": {
        "allow": [
            "Bash(npm run lint)",
            "Bash(npm run test *)",
            "Read(~/.zshrc)"
        ],
        "deny": [
            "Bash(curl *)",
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)"
        ]
    },
    "env": {
        "CLAUDE_CODE_USE_BEDROCK": "1",
        "AWS_PROFILE": "ai3_b",
        "AWS_REGION": "us-west-2",
        "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
        "OTEL_METRICS_EXPORTER": "otlp"
    }
}