# Outline Configuration for AIDLC-Beads
# Copy this file to .env and fill in the required values.
#
# See: https://docs.getoutline.com/s/hosting/doc/environment-variables-LAnJbz30PG

# ─── Required ───────────────────────────────────────────────────────────────

# Generate these with: openssl rand -hex 32
SECRET_KEY=change-me-generate-with-openssl-rand-hex-32
UTILS_SECRET=change-me-generate-with-openssl-rand-hex-32

# Database
DATABASE_URL=postgres://outline:${POSTGRES_PASSWORD}@postgres:5432/outline
POSTGRES_PASSWORD=outline_password

# Redis
REDIS_URL=redis://redis:6379

# URL where Outline will be accessible
URL=http://localhost:3000

# ─── Authentication ─────────────────────────────────────────────────────────
# At least one auth provider is required. Uncomment and configure one.

# Option 1: Slack
# SLACK_CLIENT_ID=
# SLACK_CLIENT_SECRET=

# Option 2: Google
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Option 3: Microsoft / Azure AD
# AZURE_CLIENT_ID=
# AZURE_CLIENT_SECRET=
# AZURE_RESOURCE_APP_ID=

# Option 4: Generic OIDC (works with Keycloak, Auth0, etc.)
# OIDC_CLIENT_ID=
# OIDC_CLIENT_SECRET=
# OIDC_AUTH_URI=
# OIDC_TOKEN_URI=
# OIDC_USERINFO_URI=
# OIDC_DISPLAY_NAME=SSO Login

# ─── Optional ───────────────────────────────────────────────────────────────

# File storage (local by default for self-hosted)
FILE_STORAGE=local
FILE_STORAGE_LOCAL_ROOT_DIR=/var/lib/outline/data

# Force HTTPS (set to true when behind a reverse proxy with TLS)
FORCE_HTTPS=false

# Default UI language
DEFAULT_LANGUAGE=en_US

# Rate limiter (requests per minute)
RATE_LIMITER_ENABLED=true
RATE_LIMITER_REQUESTS=1000
RATE_LIMITER_DURATION_WINDOW=60

# ─── AIDLC Sync Configuration ──────────────────────────────────────────────
# These are used by scripts/sync-outline.py, not by Outline itself.

# Outline API key (create at http://localhost:3000/settings/api)
# OUTLINE_API_KEY=ol_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Outline API base URL
# OUTLINE_API_URL=http://localhost:3000/api

# Name of the Outline collection for AIDLC artifacts
# OUTLINE_COLLECTION_NAME=AIDLC Documents
